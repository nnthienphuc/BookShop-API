  "components": {
    "schemas": {
      "AuthorRequestDTO": {
        "required": [
          "isDeleted",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "isDeleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "CategoryRequestDTO": {
        "required": [
          "isDeleted",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "isDeleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "ChangePasswordDTO": {
        "required": [
          "confirmNewPassword",
          "newPassword",
          "oldPassword"
        ],
        "type": "object",
        "properties": {
          "oldPassword": {
            "type": "string",
            "nullable": true
          },
          "newPassword": {
            "type": "string",
            "nullable": true
          },
          "confirmNewPassword": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PromotionRequestDTO": {
        "required": [
          "condition",
          "discountPercent",
          "endDate",
          "isDeleted",
          "name",
          "quantity",
          "startDate"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          },
          "condition": {
            "type": "number",
            "format": "double"
          },
          "discountPercent": {
            "type": "number",
            "format": "double"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "isDeleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PublisherRequestDTO": {
        "required": [
          "isDeleted",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "isDeleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "RegisterDTO": {
        "required": [
          "address",
          "citizenIdentification",
          "confirmPassword",
          "dateOfBirth",
          "email",
          "familyName",
          "gender",
          "givenName",
          "password",
          "phone"
        ],
        "type": "object",
        "properties": {
          "familyName": {
            "maxLength": 70,
            "minLength": 0,
            "pattern": ".*\\S.*",
            "type": "string"
          },
          "givenName": {
            "maxLength": 30,
