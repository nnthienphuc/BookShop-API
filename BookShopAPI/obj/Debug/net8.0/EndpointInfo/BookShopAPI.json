  },
  "components": {
    "schemas": {
      "CategoryRequestDTO": {
        "required": [
          "isDeleted",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "isDeleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "ChangePasswordDTO": {
        "required": [
          "confirmNewPassword",
          "newPassword",
          "oldPassword"
        ],
        "type": "object",
        "properties": {
          "oldPassword": {
            "type": "string",
            "nullable": true
          },
          "newPassword": {
            "type": "string",
            "nullable": true
          },
          "confirmNewPassword": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDTO": {
        "required": [
          "address",
          "citizenIdentification",
          "confirmPassword",
          "dateOfBirth",
          "email",
          "familyName",
          "gender",
          "givenName",
          "password",
          "phone",
          "role"
        ],
        "type": "object",
        "properties": {
          "familyName": {
            "maxLength": 70,
            "minLength": 0,
            "pattern": ".*\\S.*",
            "type": "string"
          },
          "givenName": {
            "maxLength": 30,
            "minLength": 0,
            "pattern": ".*\\S.*",
            "type": "string"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "address": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": ".*\\S.*",
            "type": "string"
          },
          "phone": {
            "maxLength": 10,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          },
          "email": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          },
          "citizenIdentification": {
            "maxLength": 12,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          },
          "role": {
            "type": "boolean"
          },
          "gender": {
            "type": "boolean"
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "confirmPassword": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResetPasswordDTO": {
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": "\\S+",
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme. Example: Bearer {token}",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}